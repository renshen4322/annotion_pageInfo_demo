<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dn.dao.CategoryDao">

    <select id="selectList" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select *
        from category
        where show_status = 1
    </select>
    <select id="selectListByCid" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select *
        from category
        where show_status = 1 and parent_cid=#{cid}
    </select>
</mapper>