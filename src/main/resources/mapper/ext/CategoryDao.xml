<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dn.dao.CategoryDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.dn.model.Category" id="categoryMap">
        <result property="catId" jdbcType="INTEGER" column="cat_id"/>
        <result property="name" jdbcType="VARCHAR" column="name"/>
        <result property="parentCid" jdbcType="INTEGER" column="parent_cid"/>
        <result property="catLevel" jdbcType="INTEGER" column="cat_level"/>
        <result property="showStatus" jdbcType="INTEGER" column="show_status"/>
        <result property="sort" jdbcType="INTEGER" column="sort"/>
        <result property="icon" jdbcType="VARCHAR" column="icon"/>
        <result property="productUnit" jdbcType="VARCHAR" column="product_unit"/>
        <result property="productCount" jdbcType="INTEGER" column="product_count"/>
    </resultMap>
    <select id="selectList" resultMap="categoryMap">
        select *
        from category where show_status=1
    </select>

</mapper>